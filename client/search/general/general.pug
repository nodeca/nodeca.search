article#content.search-general
  != self.partial('@common.blocks.navbar.logo_apps')

  .layout__container.container-fluid.space-top._affix(
    data-affix-bottom={
      offset:     500,
      wire_below: 'search.general:load_next',
      throttle:   100
    }
  )
    != self.partial('@users.blocks.announces')

    header.page-head
      h1.page-head__title(itemprop='name')= self.t('title')

    form.search-general__form(data-on-submit='search.general:search')

      input(
        type='hidden'
        name='type'
        value=self.type || self.content_types[0]
      )

      .search-general__form-input-container
        .input-group
          input.form-control(
            type='text'
            name='query'
            value=self.query
          )
          span.input-group-btn
            button.search-general__form-submit.btn.btn-outline-secondary(
              type='submit'
            )= self.t('search')

        a.search-general__form-options-link(
          href='#search_options'
          data-on-click='search.general:search_options'
        )= self.t('options')

      #search_options.search-general__form-options-container.collapse
        .search-general__form-options-inner
          .row
            .col-lg-3.col-md-4.col-sm-6.col-12.mb-2.mb-sm-0
              select.form-control.custom-select(name='sort')
                each type, i in self.sort_types
                  option(value=type, selected=(self.sort === type))= self.t('sort.' + type)

            .col-lg-3.col-md-4.col-sm-6.col-12
              select.form-control.custom-select(name='period')
                each type, i in self.period_types
                  option(value=type, selected=(self.period === type))= self.t('period.' + type)

    .search-general__results
      //- this gets replaced by 'results' partial when search is performed
